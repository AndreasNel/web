{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "**.js",
    "**.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.ts"
  ]
}
